<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="522.0" prefWidth="443.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.jualas.filmoteca.MainController">
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="Title:" />
        <TextField fx:id="titleTextField" layoutX="100.0" layoutY="10.0" />

        <Label layoutX="14.0" layoutY="44.0" text="Year:" />
        <TextField fx:id="yearTextField" layoutX="100.0" layoutY="40.0" />

        <Label layoutX="14.0" layoutY="74.0" text="Description:" />
        <TextArea fx:id="descriptionTextArea" layoutX="100.0" layoutY="70.0" prefHeight="100.0" prefWidth="200.0" />

        <Label layoutX="14.0" layoutY="184.0" text="Rating:" />
        <Slider fx:id="ratingSlider" layoutX="100.0" layoutY="180.0" majorTickUnit="1" max="10" min="0" showTickLabels="true" showTickMarks="true" />

        <Label layoutX="14.0" layoutY="224.0" text="Poster URL:" />
        <TextField fx:id="posterUrlTextField" layoutX="100.0" layoutY="220.0" onAction="#onPosterUrlEntered" />

        <ImageView fx:id="posterImageView" fitHeight="200.0" fitWidth="150.0" layoutX="100.0" layoutY="266.0" />

        <Button layoutX="100.0" layoutY="476.0" onAction="#onAddMovieClick" text="Add Movie" />
    </children>
</AnchorPane>
